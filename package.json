{
    "name": "switchblade",
    "version": "1.0.0",
    "description": "2nd level Javascript framework abstraction",
    "type": "module",
    "bugs": "https://github.com/raflymln/switchblade/issues",
    "repository": "https://github.com/raflymln/switchblade",
    "license": "MIT",
    "author": {
        "name": "Rafly Maulana",
        "email": "me@raflymaulana.me",
        "url": "https://raflymaulana.me"
    },
    "keywords": [
        "zod",
        "hono",
        "framework",
        "typescript",
        "nodejs",
        "backend",
        "bun",
        "deno"
    ],
    "scripts": {
        "prepare": "husky",
        "lint": "tsc --noEmit && eslint src --ext .ts,.tsx,.js,.jsx"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "body-max-line-length": [
                0
            ]
        }
    },
    "prettier": {
        "arrowParens": "always",
        "bracketSameLine": false,
        "bracketSpacing": true,
        "endOfLine": "auto",
        "htmlWhitespaceSensitivity": "css",
        "jsxSingleQuote": false,
        "printWidth": 200,
        "semi": true,
        "tabWidth": 4,
        "trailingComma": "es5"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "settings": {
            "import/extensions": [
                ".ts",
                ".tsx"
            ]
        },
        "plugins": [
            "prettier",
            "import",
            "no-relative-import-paths"
        ],
        "extends": [
            "prettier",
            "eslint:recommended",
            "plugin:import/recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "rules": {
            "eqeqeq": [
                "error",
                "always"
            ],
            "no-case-declarations": "error",
            "no-confusing-arrow": "error",
            "no-else-return": "error",
            "no-empty-function": "off",
            "no-multi-spaces": "error",
            "no-var": "error",
            "object-shorthand": [
                "error",
                "always"
            ],
            "prefer-arrow-callback": "error",
            "prefer-const": "error",
            "prefer-template": "error",
            "spaced-comment": [
                "error",
                "always"
            ],
            "yoda": "error",
            "@typescript-eslint/array-type": [
                "error",
                {
                    "default": "array"
                }
            ],
            "@typescript-eslint/ban-types": "error",
            "@typescript-eslint/consistent-indexed-object-style": [
                "error",
                "record"
            ],
            "@typescript-eslint/consistent-type-definitions": [
                "error",
                "type"
            ],
            "@typescript-eslint/consistent-type-imports": [
                "error",
                {
                    "prefer": "type-imports",
                    "disallowTypeAnnotations": true,
                    "fixStyle": "separate-type-imports"
                }
            ],
            "@typescript-eslint/no-extra-non-null-assertion": "error",
            "@typescript-eslint/no-import-type-side-effects": "error",
            "import/first": "error",
            "import/no-absolute-path": "error",
            "import/no-anonymous-default-export": "error",
            "import/no-duplicates": "error",
            "import/no-namespace": "error",
            "import/no-relative-packages": "error",
            "import/no-relative-parent-imports": "error",
            "import/no-unresolved": "off",
            "import/order": [
                "error",
                {
                    "newlines-between": "always",
                    "groups": [
                        "type",
                        "index",
                        "sibling",
                        "parent",
                        "internal",
                        "external",
                        "builtin",
                        "object"
                    ],
                    "alphabetize": {
                        "order": "asc",
                        "caseInsensitive": true
                    }
                }
            ],
            "prettier/prettier": "error"
        }
    },
    "packageManager": "pnpm@10.8.0",
    "dependencies": {
        "@hono/node-server": "^1.14.1",
        "@hono/zod-openapi": "^0.19.5",
        "@scalar/hono-api-reference": "^0.7.3",
        "@sinclair/typebox": "^0.34.33",
        "hono": "^4.7.7",
        "husky": "^9.1.7",
        "tsx": "^4.19.3",
        "zod": "^3.24.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@scalar/types": "^0.1.3",
        "@types/node": "^22.13.14",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-no-relative-import-paths": "^1.6.1",
        "eslint-plugin-prettier": "^5.2.5",
        "prettier": "^3.5.3",
        "typescript": "^5.8.2"
    }
}
