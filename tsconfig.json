{
    "compilerOptions": {
        "baseUrl": ".",
        "lib": [
            "ES2024"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES2024",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@/package.json": [
                "package.json"
            ],
        },
        "declaration": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}